{
  "manifest_version": 3,
  "name": "Screen Reader Logger",
  "version": "1.0",
  "description": "Logs time spent on each word read by the screen reader.",
  "permissions": ["activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "action": {
    "default_popup": "popup.html"
  }
}
